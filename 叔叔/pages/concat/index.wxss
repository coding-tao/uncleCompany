.concat-item .title{
    font-size: 30rpx;
}

.concat-item{
    padding: 100rpx 10rpx 60rpx;
    color: #333;
}

.concat-list{
    display: -webkit-box;
    display: box;
    display: -moz-box;
    /* 老版本 - 适配iOS 6-, Safari 3.1-6 */
    display: -webkit-flex;
    /* 新版本 - 适配Chrome */
    display: flex;
    font-size: 28rpx;
    margin-bottom: 20rpx;
}

.concat-list .name{
    width: 15%;
    text-align: right;
    margin-right: 5%;
}

.concat-list .content{
    width: 80%;
}

.tel{
  width: 360rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  margin:80rpx auto 30rpx;
  font-size: 24rpx;
  background-color: #42D0DE;
  color: #fff;
  border-radius: 12rpx;
}

.tel.tel1{
    background-color: #F5856F;
    margin-top: 30rpx;
}